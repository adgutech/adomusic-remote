<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_settings"
    app:startDestination="@id/mainSettingsFragment">

    <fragment
        android:id="@+id/mainSettingsFragment"
        android:name="com.adgutech.adomusic.remote.ui.fragments.settings.MainSettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_main_settings">

        <action
            android:id="@+id/action_mainSettingsFragment_to_themeSettingsFragment"
            app:destination="@id/themeSettingsFragment" />

        <action
            android:id="@+id/action_mainSettingsFragment_to_playbackSettingsFragment"
            app:destination="@id/playbackSettingsFragment" />

        <action
            android:id="@+id/action_mainSettingsFragment_to_personalizeSettingsFragment"
            app:destination="@id/personalizeSettingsFragment" />

        <action
            android:id="@+id/action_mainSettingsFragment_to_generalSettingsFragment"
            app:destination="@id/generalSettingsFragment" />

        <action
            android:id="@+id/action_mainSettingsFragment_to_aboutSettingsFragment"
            app:destination="@id/aboutFragment" />

    </fragment>

    <fragment
        android:id="@+id/themeSettingsFragment"
        android:name="com.adgutech.adomusic.remote.ui.fragments.settings.ThemeSettingsFragment"
        android:label="@string/preference_category_title_themes" />

    <fragment
        android:id="@+id/playbackSettingsFragment"
        android:name="com.adgutech.adomusic.remote.ui.fragments.settings.PlaybackSettingsFragment"
        android:label="@string/preference_category_title_playback" />

    <fragment
        android:id="@+id/personalizeSettingsFragment"
        android:name="com.adgutech.adomusic.remote.ui.fragments.settings.PersonalizeSettingsFragment"
        android:label="@string/preference_category_title_personalize" />

    <fragment
        android:id="@+id/generalSettingsFragment"
        android:name="com.adgutech.adomusic.remote.ui.fragments.settings.GeneralSettingsFragment"
        android:label="@string/preference_category_title_general" />

    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.adgutech.adomusic.remote.ui.fragments.AboutFragment"
        android:label="@string/preference_category_title_about" />
</navigation>