<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.activities.PurchaseActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:elevation="0dp"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            style="@style/Toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_collapseMode="pin"
            app:navigationIcon="@drawable/ic_arrow_back_24dp"
            app:navigationIconTint="?colorControlNormal"
            app:titleCentered="true"
            app:titleTextColor="?android:attr/textColorPrimary" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintBottom_toTopOf="@id/purchaseContent"
        android:overScrollMode="@integer/overScrollMode">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.adgutech.commons.ui.views.ItemProView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:proIcon="@drawable/ic_play_circle_24dp"
                app:proTitle="@string/pro_now_playing_theme" />

            <com.adgutech.commons.ui.views.ItemProView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:proIcon="@drawable/ic_palette_24dp"
                app:proTitle="@string/pro_just_black" />

            <com.adgutech.commons.ui.views.ItemProView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:proIcon="@drawable/ic_colorize_24dp"
                app:proTitle="@string/pro_adaptive_color" />

            <com.adgutech.commons.ui.views.ItemProView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:proIcon="@drawable/ic_volume_up_24dp"
                app:proTitle="@string/pro_volume_controls" />

            <com.adgutech.commons.ui.views.ItemProView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:proIcon="@drawable/ic_pause_24dp"
                app:proTitle="@string/pro_pause_on_zero" />

            <com.adgutech.commons.ui.views.ItemProView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:proIcon="@drawable/ic_equalizer_24dp"
                app:proTitle="@string/pro_equalizer" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/purchaseContent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.adgutech.commons.ui.views.ItemProductView
            android:id="@+id/purchaseButton"
            style="@style/Widget.Material3.CardView.Filled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:paddingVertical="16dp"
            app:productName="Buy now"
            app:productPrice="$4.00 USD"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginVertical="16dp"
            android:paddingHorizontal="12dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/restoreButton"
                android:background="?rectSelector"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:gravity="center_horizontal"
                android:text="@string/action_restore"
                android:textAppearance="@style/subtitle1" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/manageButton"
                android:background="?rectSelector"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:gravity="center_horizontal"
                android:text="@string/action_manager"
                android:textAppearance="@style/subtitle1" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>