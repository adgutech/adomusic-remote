<resources>
    <declare-styleable name="Indicator">
        <attr name="dotDiameter" format="dimension" />
        <attr name="dotGap" format="dimension" />
        <attr name="animationDuration" format="integer" />
        <attr name="currentPageIndicatorColor" format="color" />
    </declare-styleable>

    <declare-styleable name="PermissionView">
        <attr name="permissionIcon" format="reference" />
        <attr name="permissionTitle" format="string" localization="suggested" />
        <attr name="permissionSummary" format="string" localization="suggested" />
        <attr name="permissionButtonText" format="string" localization="suggested" />
    </declare-styleable>

    <declare-styleable name="ItemProView">
        <attr name="proIcon" format="reference" />
        <attr name="proTitle" format="string" localization="suggested" />
    </declare-styleable>

    <declare-styleable name="PreferenceCategoryView">
        <attr name="icon" format="reference" />
        <attr name="titlePreference" format="string" localization="suggested" />
        <attr name="summaryPreference" format="string" localization="suggested" />
    </declare-styleable>

    <declare-styleable name="ItemProductView">
        <attr name="productName" format="string" localization="suggested" />
        <attr name="productPrice" format="string" localization="suggested" />
    </declare-styleable>

    <declare-styleable name="ItemAboutView">
        <attr name="aboutIcon" format="reference" />
        <attr name="aboutTitle" format="string" localization="suggested" />
        <attr name="aboutText" format="string" localization="suggested" />
    </declare-styleable>
</resources>