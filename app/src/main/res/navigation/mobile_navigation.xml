<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.adgutech.adomusic.remote.ui.fragments.home.HomeFragment"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_albums"
        android:name="com.adgutech.adomusic.remote.ui.fragments.albums.AlbumsFragment"
        android:label="@string/title_albums"
        tools:layout="@layout/fragment_main_recycler" />

    <fragment
        android:id="@+id/navigation_artists"
        android:name="com.adgutech.adomusic.remote.ui.fragments.artists.ArtistsFragment"
        android:label="@string/title_artists"
        tools:layout="@layout/fragment_main_recycler" />

    <fragment
        android:id="@+id/navigation_playlists"
        android:name="com.adgutech.adomusic.remote.ui.fragments.playlists.PlaylistsFragment"
        android:label="@string/title_playlists"
        tools:layout="@layout/fragment_playlists" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.adgutech.adomusic.remote.ui.fragments.search.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/albumDetailsFragment"
        android:name="com.adgutech.adomusic.remote.ui.fragments.albums.AlbumDetailsFragment"
        tools:layout="@layout/fragment_album_details">
        <argument
            android:name="extra_album_id"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/artistDetailsFragment"
        android:name="com.adgutech.adomusic.remote.ui.fragments.artists.ArtistDetailsFragment"
        tools:layout="@layout/fragment_artist_details">
        <argument
            android:name="extra_artist_id"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/playlistDetailsFragment"
        android:name="com.adgutech.adomusic.remote.ui.fragments.playlists.PlaylistDetailsFragment"
        tools:layout="@layout/fragment_playlist_details">
        <argument
            android:name="extra_playlist_id"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/detailsListFragment"
        android:name="com.adgutech.adomusic.remote.ui.fragments.DetailListFragment"
        tools:layout="@layout/fragment_list_detail">
        <argument
            android:name="type"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/moreAlbumsFragment"
        android:name="com.adgutech.adomusic.remote.ui.fragments.artists.MoreAlbumsFragment"
        tools:layout="@layout/fragment_more_albums">

        <argument
            android:name="extra_artist_id"
            app:argType="string" />

    </fragment>

    <fragment
        android:id="@+id/playing_queue_fragment"
        android:name="com.adgutech.adomusic.remote.ui.fragments.queue.PlayingQueueFragment" />

    <fragment
        android:id="@+id/equalizer_fragment"
        android:name="com.adgutech.adomusic.remote.ui.fragments.EqualizerFragment" />

    <fragment
        android:id="@+id/settings_fragment"
        android:name="com.adgutech.adomusic.remote.ui.fragments.settings.SettingsFragment" />
</navigation>