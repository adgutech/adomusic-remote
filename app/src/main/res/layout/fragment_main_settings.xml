<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="@integer/overScrollMode">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/mini_player_height">

        <com.adgutech.commons.ui.views.PreferenceCategoryView
            android:id="@+id/preferenceThemes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_palette_24dp"
            app:titlePreference="@string/preference_category_title_themes"
            app:summaryPreference="@string/preference_category_summary_themes" />

        <com.adgutech.commons.ui.views.PreferenceCategoryView
            android:id="@+id/preferencePlayback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_play_circle_24dp"
            app:titlePreference="@string/preference_category_title_playback"
            app:summaryPreference="@string/preference_category_summary_playback" />

        <com.adgutech.commons.ui.views.PreferenceCategoryView
            android:id="@+id/preferencePersonalize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_hdr_strong_24dp"
            app:titlePreference="@string/preference_category_title_personalize"
            app:summaryPreference="@string/preference_category_summary_personalize" />

        <com.adgutech.commons.ui.views.PreferenceCategoryView
            android:id="@+id/preferenceGeneral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_testing_24dp"
            app:titlePreference="@string/preference_category_title_general"
            app:summaryPreference="@string/preference_category_summary_general" />

        <com.adgutech.commons.ui.views.PreferenceCategoryView
            android:id="@+id/preferenceSpotifySettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_settings_24dp"
            app:titlePreference="@string/preference_category_title_spotify_settings"
            app:summaryPreference="@string/preference_category_summary_spotify_settings" />

        <com.adgutech.commons.ui.views.PreferenceCategoryView
            android:id="@+id/preferenceAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_info_24dp"
            app:titlePreference="@string/preference_category_title_about"
            app:summaryPreference="@string/preference_category_summary_about" />

