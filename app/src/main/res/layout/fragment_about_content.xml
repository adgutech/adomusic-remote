<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/mini_player_height">

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.Material3.CardView.Filled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/shapeableImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearance="?shapeAppearanceCornerSmall"
                app:srcCompat="@mipmap/ic_launcher" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="16dp"
                android:textAppearance="@style/headline5"
                android:textColor="?android:attr/textColorPrimary"
                android:gravity="center"
                android:text="@string/app_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shapeableImageView" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="16dp"
                android:textAppearance="@style/body2"
                android:textColor="?android:attr/textColorSecondary"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title"
                tools:text="@tools:sample/full_names" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.Material3.CardView.Outlined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.adgutech.commons.ui.views.ItemAboutView
                android:id="@+id/appRateButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:aboutIcon="@drawable/ic_star_24dp"
                app:aboutTitle="@string/title_rate_app"
                app:aboutText="@string/summary_rate_app" />

            <com.adgutech.commons.ui.views.ItemAboutView
                android:id="@+id/donateButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:aboutIcon="@drawable/ic_redeem_24dp"
                app:aboutTitle="@string/title_donate"
                app:aboutText="@string/summary_donate" />

            <com.adgutech.commons.ui.views.ItemAboutView
                android:id="@+id/shareAppButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:aboutIcon="@drawable/ic_share_24dp"
                app:aboutTitle="@string/title_share_app"
                app:aboutText="@string/summary_share_app" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.Material3.CardView.Outlined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.adgutech.commons.ui.views.ItemAboutView
                android:id="@+id/licensesButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:aboutIcon="@drawable/ic_license_24d"
                app:aboutTitle="@string/title_licenses" />

            <com.adgutech.commons.ui.views.ItemAboutView
                android:id="@+id/privacyPolicyButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:aboutIcon="@drawable/ic_privacy_tip_24dp"
                app:aboutTitle="@string/title_privacy_policy" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/textNormal"
        android:textColor="?android:attr/textColorPrimary"
        android:gravity="center"
        android:text="@string/text_made_in_mexico_by_adgutech"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.appcompat.widget.LinearLayoutCompat>